<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="70.0dip"
        android:layout_gravity="center"
        android:layout_margin="5.0dip"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:layout_height="66.0dip"

            >


        <LinearLayout
            android:background="@drawable/border1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="3.0dip"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="3.0dip"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivThumb"
                android:layout_width="60.0dip"
                android:layout_height="45.0dip"
                android:minHeight="1.0sp"
                android:minWidth="1.0sp"
                android:onClick="onClick"
                android:padding="3.0dip"
                android:src="@drawable/play_button" />
            <TextView
                android:id="@+id/tv_name_effect"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3.0dip"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:singleLine="true"
                android:fontFamily="serif"
                android:text="@string/title_tone_of_voice"
                android:textColor="#ff000000"
                android:textSize="@dimen/text_size_title" />

            <ImageView
                android:id="@+id/btn_play"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:minHeight="1.0sp"
                android:minWidth="1.0sp"
                android:onClick="onClick"
                android:padding="9.0dip"
                android:layout_marginRight="4dp"
                android:src="@drawable/play_t"
                android:tint="@color/icon"
                android:background="@drawable/border1"/>

            <ImageView
                android:id="@+id/btn_save"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:minHeight="1.0sp"
                android:minWidth="1.0sp"
                android:onClick="onClick"
                android:padding="5.0dip"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_dwnld"
                android:background="@drawable/border1"
                android:tint="@color/icon"/>

            <ImageView
                android:id="@+id/btn_share"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:minHeight="1.0sp"
                android:minWidth="1.0sp"
                android:onClick="onClick"
                android:padding="9.0dip"
                android:layout_marginRight="5dp"
                android:src="@drawable/share_t"
                android:tint="@color/icon"
                android:background="@drawable/border1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</LinearLayout>